<section id="subscription">
    <div class="container-fluid howwork-content" name="HowItWorks">
        <div class="col-lg-12 dev-header" style="padding-top: 5%;">
            <h2>Available Subsription Plans</h2>
        </div>
        <div class="row card-section">
            {{#apiMetadata.subscriptionPlans}}
            <div class="col-lg-4">
                <div class="card dev-card custom-api-card">
                    <div class="card-body">
                        <h5 class="work-apicard-title">{{displayName}}</h5>
                        <h5 class="work-apicard-title">{{amount}}$</h5>
                        <p>Description: {{description}}</p>
                        {{#if (eq status "Subscribed")}}
                            <a type="button" class="btn btn-btn-primary disabled" >Subscribed</a>
                        {{else}}
                            <a type="button" class="btn btn-primary" href="{{baseUrl}}/myAPIs?apiId={{apiName}}&subPlan={{policyName}}&userName=divya" >Subscribe</a>
                        {{/if}}
                    </div>
                </div>
            </div>
            {{/apiMetadata.subscriptionPlans}}
        </div>
    </div>
</section>